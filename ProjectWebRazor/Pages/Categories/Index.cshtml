@page
@model ProjectWebRazor.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary"> @*asp-action="Create"*@
                <i class="bi bi-plus-circle"></i>   Create New Category
            </a>
        </div>
    </div>

</div>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
        {
        <tr>
            <td>
                @obj.Name
            </td>
            
            <td>
                @obj.DisplayOrder
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                    </a>

                        <a asp-page="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-x-circle"></i> Delete
                    </a>
                </div>
            </td>
        </tr>
        }

    </tbody>

</table>

